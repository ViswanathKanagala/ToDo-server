{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "Take Art to Heart API Documentation",
    "description": "List of all API endpoints which can be used in your applications."
  },
  "basePath": "/",
  "host": "localhost:5500",
  "schemes": ["http"],
  "paths": {
    "/login": {
      "post": {
        "tags": ["Authentication"],
        "summary": "Login to the application",
        "description": "Send a post request with body containing email and password to login",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "User details on succesfull login",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "email": {
                      "type": "string"
                    },
                    "username": {
                      "type": "string"
                    },
                    "contact number": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Invalid credentials"
          }
        }
      }
    },
    "/logout": {
      "get": {
        "tags": ["Authentication"],
        "summary": "Logout from the application",
        "description": "Send a post request to logout",
        "responses": {
          "200": {
            "description": "User logged out"
          }
        }
      }
    },
    "/register": {
      "post": {
        "tags": ["Authentication"],
        "summary": "Register to the application",
        "description": "Send a post request with body containing email, username, password and contact number to register",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "username": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  },
                  "contact number": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "User registered",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "acknowledged": {
                      "type": "boolean"
                    },
                    "insertedId": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/updateuser": {
      "post": {
        "tags": ["User"],
        "summary": "Update user details",
        "description": "Send a post request with body containing email, username, password and contact number to update user details",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "username": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  },
                  "contact number": {
                    "type": "string"
                  },
                  "id": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/posts": {
      "get": {
        "tags": ["Post"],
        "summary": "Get all posts",
        "description": "Send a get request to get all posts",
        "responses": {
          "200": {
            "description": "List of all posts"
          }
        }
      }
    },
    "/post": {
      "post": {
        "tags": ["Post"],
        "summary": "Post a new post",
        "description": "Send a post request with body containing title, description, image and tags to post a new post",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": {
                    "type": "string"
                  },
                  "userId": {
                    "type": "string"
                  },
                  "description": {
                    "type": "string"
                  },
                  "image": {
                    "type": "file"
                  },
                  "tags": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Post added",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "acknowledged": {
                      "type": "boolean"
                    },
                    "insertedId": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/post/{filename}": {
      "get": {
        "tags": ["Post"],
        "summary": "Get a post by filename",
        "description": "Send a get request with filename to get the file of the specific post",
        "parameters": [
          {
            "name": "filename",
            "in": "path",
            "description": "Filename of the post",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Post details",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "userid": {
                      "type": "string"
                    },
                    "username": {
                      "type": "string"
                    },
                    "description": {
                      "type": "string"
                    },
                    "image": {
                      "type": "string"
                    },
                    "tags": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/post/updatelike/{id}": {
      "get": {
        "tags": ["Post"],
        "summary": "Update like of a post",
        "description": "Send a get request with id to update the like of the specific post",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Id of the post",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Post details",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "acknowledged": {
                      "type": "boolean"
                    },
                    "modifiedCount": {
                      "type": "number"
                    },
                    "matchedCount": {
                      "type": "number"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
